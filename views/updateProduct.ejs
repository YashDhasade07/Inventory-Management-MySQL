<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('_bootstrap_meta') %>
    <title>Update Product</title>
</head>

<body>
    <%- include('_header') %>
    <form class="w-50 mx-auto mt-4 form-container" action="/products/update/<%= product.ProductId %>" method="post">
        <h3>Update Product</h3>
        <fieldset class="mb-4">
            <label for="name" class="form-label">Product Name</label>
            <input type="text" class="form-control" id="name" name="name" value="<%= product.ProductName %>" required />
        </fieldset>
        <fieldset class="mb-4">
            <label for="categoryId" class="form-label">Category ID</label>
            <input type="text" class="form-control" id="categoryId" name="categoryId" value="<%= product.CategoryId %>" required />
        </fieldset>
        <button type="submit" class="btn btn-primary align-self-center">Update Product</button>
    </form>
    <%- include('_bootstrap_script') %>
</body>
</html>
