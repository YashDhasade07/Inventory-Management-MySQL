<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('_bootstrap_meta') %>
    <title>Update Category</title>
</head>

<body>
    <%- include('_header') %>
    <form class="w-50 mx-auto mt-4 form-container" action="/categories/update/<%= category.id %>" method="post">
        <h3>Update Category</h3>
        <fieldset class="mb-4">
            <label for="name" class="form-label">Category Name</label>
            <input type="text" class="form-control" id="name" name="name" value="<%= category.name %>" required />
        </fieldset>
        <button type="submit" class="btn btn-primary align-self-center">Update Category</button>
    </form>
    <%- include('_bootstrap_script') %>
</body>
</html>
